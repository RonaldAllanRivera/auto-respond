# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Render / production (recommended)
# Set DJANGO_DEBUG=0 and include your Render host in DJANGO_ALLOWED_HOSTS.
# Example: DJANGO_ALLOWED_HOSTS=your-app.onrender.com

# Database
POSTGRES_DB=meet_lessons
POSTGRES_USER=meet_lessons
POSTGRES_PASSWORD=meet_lessons
POSTGRES_HOST=db
POSTGRES_PORT=5432

# App security
# NOTE: The current scaffold uses these values. In the SaaS phases, the extension will move to
# device pairing + server-issued tokens (no shared secret shipped in the extension).
EXTENSION_BOOTSTRAP_KEY=change-me-long-random
EXTENSION_TOKEN_SECRET=change-me-long-random

# Google OAuth (SaaS)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_SECONDS=15

# Stripe (SaaS)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe plan configuration is managed in Django Admin (Billing Plan CMS).
# You will store the Stripe Price ID for the Monthly plan in the database.

# App defaults
DEFAULT_GRADE_LEVEL=3
DEFAULT_MAX_SENTENCES=2
